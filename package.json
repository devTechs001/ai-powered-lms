{
  "name": "modern-lms",
  "version": "1.0.0",
  "description": "AI-Powered Learning Management System",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter lms-backend dev\" \"pnpm --filter lms-frontend dev\"",
    "dev:frontend": "pnpm --filter lms-frontend dev",
    "dev:backend": "pnpm --filter lms-backend dev",
    "build": "pnpm --filter lms-frontend build && pnpm --filter lms-backend build",
    "build:frontend": "pnpm --filter lms-frontend build",
    "build:backend": "pnpm --filter lms-backend build",
    "install:all": "pnpm install -r",
    "clean": "pnpm -r exec rm -rf node_modules && pnpm install",
    "lint": "pnpm -r run lint"
  },
  "keywords": [
    "lms",
    "ai",
    "education",
    "learning"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "packageManager": "pnpm@10.18.0"
}
